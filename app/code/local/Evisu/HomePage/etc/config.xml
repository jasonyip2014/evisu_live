                            </hp_ip_video>
                            <hp_ip_image>
                                <label>Image</label>
                                <template>image</template>
                            </hp_ip_image>
                            <hp_ip_link_text>
                                <label>Link Text</label>
                                <template>text</template>
                            </hp_ip_link_text>
