                    </hp_image_panel_data_tab>
                    <hp_image_panel_animation_tab>
                        <name>Animation Settings</name>
                        <attributes>
                            <width>
                                <label>Image Width (px)</label>
                                <type>int</type>
                                <template>text</template>
                                <required>1</required>
                            </width>
                            <height>
                                <label>Image Height (px)</label>
                                <type>int</type>
                                <template>text</template>
                                <required>1</required>
                            </height>
                            <css>
                                <label>Image CSS</label>
                                <template>text</template>
                            </css>
                            <animation>
                                <label>Animation Rules</label>
                                <input>animation_gridfield</input>
                                <template>gridfield</template>
                                <type>text</type>
                            </animation>
                        </attributes>
                    </hp_image_panel_animation_tab>
                </groups>
            </hp_image_panel>

