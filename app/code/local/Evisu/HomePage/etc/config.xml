<?xml version="1.0"?>
<config>
    <modules>
        <Evisu_HomePage>
            <version>0.3.4</version>
        </Evisu_HomePage>
    </modules>
    <global>
        <models>
            <evisu_homepage>
                <class>Evisu_HomePage_Model</class>
            </evisu_homepage>
        </models>
        <blocks>
            <evisu_homepage>
                <class>Evisu_HomePage_Block</class>
            </evisu_homepage>
        </blocks>
        <helpers>
            <evisu_homepage>
                <class>Evisu_HomePage_Helper</class>
            </evisu_homepage>
        </helpers>
        <resources>
            <evisu_homepage_setup>
                <setup>
                    <module>Evisu_HomePage</module>
                    <class>RonisBT_Cms_Model_Entity_Setup</class>
                </setup>
            </evisu_homepage_setup>
        </resources>
    </global>
    <cmsadvanced>
        <pagetypes>
            <home_page>
                <name>Home Page</name>
                <template>cmsadvanced/homepage/homepage.phtml</template>
                <block>evisu_homepage/homepage</block>
                <groups>
                    <main>
                        <label>Main</label>
                        <attributes>
                            <main_image>
                                <name>Main Image</name>
                                <required>1</required>
                                <template>image</template>
                            </main_image>
                            <main_text>
                                <name>Main Text</name>
                                <required>1</required>
                                <template>textarea</template>
                            </main_text>
                            <main_text_row2>
                                <name>Main Text</name>
                                <required>0</required>
                                <template>textarea</template>
                                <note>Displayed with delay</note>
                            </main_text_row2>
                            <hp_main_color_scheme>
                                <label>Color Scheme</label>
                                <type>varchar</type>>
                                <template>dropdown</template>
                                <source>evisu_homepage/config_source_bgcolor</source>
                                <required>1</required>
                            </hp_main_color_scheme>
                        </attributes>
                    </main>
                </groups>
            </home_page>
            <home_page_section>
                <name>Home Page Section</name>
                <template>cmsadvanced/homepage/blocks/section.phtml</template>
                <block>evisu_homepage/homepage</block>
                <groups>
                    <hp_section_animation>
                        <name>Animation Settings</name>
                        <attributes>
                            <css>
                                <label>Section Css</label>
                                <template>text</template>
                            </css>
                            <animation>
                                <label>Section Animation</label>
                                <input>animation_gridfield</input>
                                <template>gridfield</template>
                                <type>text</type>
                            </animation>
                        </attributes>
                    </hp_section_animation>
                </groups>
            </home_page_section>

            <hp_text_block>
                <name>Home Page Text Block</name>
                <template>cmsadvanced/homepage/blocks/text_block.phtml</template>
                <groups>
                    <hp_data_text_block_tab>
                        <name>Data</name>
                        <attributes>
                            <hp_tb_header_row1>
                                <label>Header Row 1</label>
                                <template>text</template>
                                <required>1</required>
                            </hp_tb_header_row1>
                            <hp_tb_header_row2>
                                <label>Header Row 2</label>
                                <template>text</template>
                                <required>0</required>
                            </hp_tb_header_row2>
                            <hp_tb_text>
                                <label>Text</label>
                                <template>textarea</template>
                                <required>1</required>
                            </hp_tb_text>
                            <hp_tb_link_text>
                                <label>Link Text</label>
                                <template>text</template>
                                <required>1</required>
                            </hp_tb_link_text>
                            <hp_tb_target_url>
                                <label>Target Url</label>
                                <template>text</template>
                                <required>1</required>
                            </hp_tb_target_url>
                            <color_scheme>
                                <label>Color Scheme</label>
                                <type>varchar</type>>
                                <template>dropdown</template>
                                <source>evisu_homepage/config_source_bgcolor</source>
                                <required>1</required>
                            </color_scheme>
                        </attributes>
                    </hp_data_text_block_tab>
                    <hp_data_text_animation_tab>
                        <name>Animation Settings</name>
                        <attributes>
                            <css>
                                <label>Block Css</label>
                                <template>text</template>
                            </css>
                            <animation>
                                <label>Animation Rules</label>
                                <input>animation_gridfield</input>
                                <template>gridfield</template>
                                <type>text</type>
                            </animation>
                        </attributes>
                    </hp_data_text_animation_tab>
                </groups>
            </hp_text_block>
            <hp_bottom_link>
                <name>Home Page Bottom Link</name>
                <template>cmsadvanced/homepage/blocks/bottom_link.phtml</template>
                <groups>
                    <hp_bt_data_tab>
                        <name>Data</name>
                        <attributes>
                            <link_text>
                                <label>Link Text</label>
                                <template>text</template>
                                <required>0</required>
                            </link_text>
                            <target_url>
