            <r_image_panel>
                <name>Rules Image Panel</name>
                <template>cmsadvanced/rules/blocks/image_panel.phtml</template>
                <groups>
                    <r_data_image_panel>
                        <name>Data</name>
                        <attributes>
                            <r_ip_image>
                                <label>Image</label>
                                <template>image</template>
                            </r_ip_image>
                        </attributes>
                    </r_data_image_panel>
                    <r_image_panel_animation>
                        <name>Animation Settings</name>
                        <attributes>
                            <r_left>
                                <label>Left (css)</label>
                                <template>text</template>
                                <required>0</required>
                            </r_left>
                            <r_right>
                                <label>Right (css)</label>
                                <template>text</template>
                                <required>0</required>
                            </r_right>
                            <r_top>
                                <label>Top (css)</label>
                                <template>text</template>
                                <required>0</required>
                            </r_top>
                            <r_ip_width>
                                <label>Image Width (px)</label>
                                <type>int</type>
                                <template>text</template>
                                <required>1</required>
                            </r_ip_width>
                            <r_ip_height>
                                <label>Image Height (px)</label>
                                <type>int</type>
                                <template>text</template>
                                <required>1</required>
                            </r_ip_height>
                            <r_ip_widtr_css>
                                <label>Image Width (css)</label>
                                <template>text</template>
                            </r_ip_widtr_css>
                            <r_ip_height_css>
                                <label>Image Height (css)</label>
                                <template>text</template>
                            </r_ip_height_css>
                            <r_ip_image_type>
                                <label>Image Type</label>
                                <type>varchar</type>>
                                <template>dropdown</template>
                                <source>evisu_rules/config_source_imagetype</source>
                                <required>1</required>
                            </r_ip_image_type>
                            <r_block_animation>
                                <label>Animation Rules</label>
                                <input>animation_gridfield</input>
                                <template>gridfield</template>
                                <type>text</type>
                            </r_block_animation>
                        </attributes>
                    </r_image_panel_animation>
                </groups>
            </r_image_panel>
        </pagetypes>
    </cmsadvanced>
</config>