                    <a href="<?php echo $this->escapeHtml($this->getHpIpTargetUrl()) ?>" class="text-link" title="<?php echo $this->escapeHtml($this->getHpIpLinkText()) ?>">
                        <span class="text-link-holder <?php echo $this->getHpIpColorScheme() ?>">
                            <span class="text-link-wrapper">
                                <?php echo $this->escapeHtml($this->getHpIpLinkText()) ?>
