<?xml version="1.0"?>
<layout version="0.1.0">
    <PAGE_TYPE_DEFAULT>
        <reference name="content">
            <block type="cmsadvanced/page" name="cmsadvanced.page">
                <action method="insert"><name>breadcrumbs</name><sibling/><after>1</after><alias>breadcrumbs</alias></action>
            </block>
        </reference>
        <reference name="breadcrumbs.container">
            <action method="unsetChild"><name>breadcrumbs</name></action>
        </reference>
    </PAGE_TYPE_DEFAULT>

    <PAGE_TYPE_HOME_PAGE>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/homepage.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/skrollr.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/homepage.js</name></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <remove name="global_messages" />
        </reference>
    </PAGE_TYPE_HOME_PAGE>

